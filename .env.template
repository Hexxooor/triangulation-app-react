# üåç Triangulation App - Environment Variables Template
# Kopiere diese Datei zu .env und f√ºlle die Werte aus

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
APP_VERSION=2.0.0
NODE_ENV=production
FLASK_ENV=production

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
REACT_APP_API_URL=/api
REACT_APP_MAP_API_KEY=your_mapbox_or_leaflet_api_key_here
REACT_APP_GPS_TIMEOUT=10000
REACT_APP_DEFAULT_ACCURACY=50
REACT_APP_VERSION=2.0.0

# =============================================================================
# BACKEND SETTINGS
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=0
PYTHONUNBUFFERED=1
SECRET_KEY=your_super_secret_key_for_flask_sessions_change_this_in_production
CORS_ORIGINS=*

# =============================================================================
# REDIS SETTINGS (Optional)
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# =============================================================================
# RENDER.COM DEPLOYMENT
# =============================================================================
# Diese werden automatisch von Render.com gesetzt:
# PORT=√úbernommen von Render.com
# RENDER=true (automatisch gesetzt)
# RENDER_SERVICE_NAME=triangulation-frontend/backend
# RENDER_SERVICE_ID=srv-...

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_GPS_ENABLED=true
FEATURE_DRAG_DROP_ENABLED=true
FEATURE_INLINE_EDIT_ENABLED=true
FEATURE_ACCURACY_CIRCLES_ENABLED=true
FEATURE_PROJECT_SAVE_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_REFERENCE_POINTS=20
DEFAULT_MAP_ZOOM=13
CALCULATION_TIMEOUT=30000
API_RATE_LIMIT=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=structured

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Mapbox (optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Google Maps (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for development:
# NODE_ENV=development
# FLASK_ENV=development
# FLASK_DEBUG=1
# REACT_APP_API_URL=http://localhost:5000
# CHOKIDAR_USEPOLLING=true